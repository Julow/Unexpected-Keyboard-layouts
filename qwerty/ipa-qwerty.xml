 <row>
    <key c="ɨ" ne="1" nw="!"/>
    <key c="ø" ne="2" nw="?" sw="ø̞"/>
    <key c="ɜ" ne="3" nw="ɞ" sw="ɛ" se="ɝ"/>
    <key c="ɾ" ne="4" nw="ɿ" sw="ɺ"/>
    <key c="ɫ" ne="5" nw="ɮ" s="ǁ"/>
    <key c="ʀ" ne="6" nw="ʁ"/>
    <key c="ɤ" ne="7" nw="ɤ̞"/>
    <key c="œ" ne="8" nw="ɵ"/>
    <key c="ʕ" ne="9" nw="ʢ" sw="ˁ"/>
    <key c="ʔ" ne="0" nw="ʡ" sw="ˀ"/>
  </row>
  <row>
    <key c="q" nw="&quot;" ne="@" sw="ʠ" se="ǃ"/>
