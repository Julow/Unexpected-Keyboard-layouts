    <key c="k" sw="ɧ" se="ʞ"/>
    <key c="l" sw="ʟ" se="ɭ" nw="ȴ" ne="ɬ"/>
  </row>
  <row>
    <key width="1.5" c="shift" key2="loc capslock" s="loc subscript"/>
    <key c="z" sw="ʒ" se="ʐ" nw="ʓ" ne="ʑ"/>
    <key c="x" sw="χ" nw="ɣ" ne="ˣ"/>
    <key c="c" nw="ç" ne="ɕ" sw="ǀ" se="ǂ"/>
    <key c="v" sw="ʋ" se="ʌ" nw="ⱱ" ne="ɴ"/>
    <key c="b" sw="β" se="ʙ" nw="ɓ"/>
    <key c="n" sw="ŋ" se="ɳ" nw="ɲ" ne="ȵ"/>
    <key c="m" sw="ɱ" se="ⁿ" nw="ᵐ" ne="ᵑ"/>
    <key width="1.5" c="backspace" se="delete"/>
  </row>
<row height="0.95">
  <key width="1.7" key0="ctrl" key1="loc switch_greekmath" key2="loc meta" key3="loc switch_clipboard" key4="switch_numeric"/>
  <key width="1.1" key0="fn" key1="loc alt" key2="loc change_method" key3="switch_emoji" key4="config"/>
  <key width="4.4" key0="space" key7="switch_forward" key8="switch_backward" key5="cursor_left" key6="cursor_right"/>
  <key width="1.1" key0="ʰ" n="superscript" s=","/>
  <key width="1.7" c="enter" s="esc" n="action"/>
</row>
</keyboard>
